<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/cl_no_color</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <color name="cl_no_color">#00000000</color>
    <color name="cl_FF4081">#FF4081</color>
    <color name="cl_333333">#333</color>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--&lt;!&ndash;<item name="android:textColorPrimary">@color/white</item>&ndash;&gt;-->
        <!--<item name="android:windowBackground">@color/windowBackground</item>-->
        <!--<item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.App</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowBackground">@color/cl_no_color</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- 标题栏title统一文字大小 -->
    <style name="TitleText">
        <item name="android:textColor">@color/cl_white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!--<style name="WelcomeTheme" parent="android:Theme.DeviceDefault">-->
    <style name="WelcomeTheme" parent="BaseAppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--dialog样式-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--无边框-->
        <item name="android:windowIsFloating">true</item><!--浮动-->
        <item name="android:windowNoTitle">true</item><!--无title-->
        <item name="android:windowIsTranslucent">true</item><!--界面透明-->
        <item name="android:background">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item><!--窗体背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--背景变暗-->
        <item name="android:backgroundDimAmount">0.5</item><!--背景变暗程度-->
    </style>

    <style name="per_fade">
        <item name="android:windowEnterAnimation">@anim/per_fade_in</item>
        <item name="android:windowExitAnimation">@anim/per_fade_out</item>
    </style>

    <style name="TitleBtnBack">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@drawable/sel_title_bar_text</item>
        <item name="android:textSize">18dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:drawablePadding">3.5dp</item>
    </style>

    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!--圆角-->
    <declare-styleable name="image_view_corner">
        <attr name="imgCorner" format="dimension"/>
    </declare-styleable>

    <style name="zhubo_direct_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#fffbe2</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="zhubo_direct_tv_c">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">#fffbe2</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="main_menu_anim_bottom">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="main_menu_anim_center">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/cl_white</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimary">@color/cl_no_color</item>
        <item name="colorPrimaryDark">@color/cl_no_color</item>
        <item name="colorAccent">@color/cl_no_color</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="CartoonReadTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/cl_white</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimary">@color/cl_black</item>
        <item name="colorPrimaryDark">@color/cl_black</item>
        <item name="colorAccent">@color/cl_black</item>
    </style>

    <style name="WXTheme" parent="BaseAppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:visibility">gone</item>
    </style>
    <!-- 自定义进度条 -->
    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>
</resources>
