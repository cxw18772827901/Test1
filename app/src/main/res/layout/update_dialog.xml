<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/permision_dialog_shape"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_permision_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.5dp"
            android:background="#ffffffff"
            android:gravity="center"
            android:text="失败"
            android:maxLines="2"
            android:textColor="@color/cl_444444"
            android:textSize="15sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:background="#ffffffff"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:text="有新版本"
            android:textColor="@color/cl_444444"
            android:maxEms="2"
            android:textSize="15sp"
            android:typeface="serif"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="30dp"
            android:background="#77000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/bt_permision_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消更新"
                android:textColor="#a0a0a0"
                android:textSize="15sp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#77000000"/>

            <TextView
                android:id="@+id/bt_permision_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="#319bd2"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
