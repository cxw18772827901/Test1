<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="60dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="作品名："
                    android:textColor="@color/cl_666"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/report_ll_bg"
                    android:cursorVisible="true"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/cl_444444"
                    android:textColorHint="@color/cl_999999"
                    android:textCursorDrawable="@drawable/ic_et_show"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,LabelFor,RtlHardcoded,TextFields"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="作    者："
                    android:textColor="@color/cl_666"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText"/>

                <EditText
                    android:id="@+id/et_author"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/report_ll_bg"
                    android:cursorVisible="true"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/cl_444444"
                    android:textColorHint="@color/cl_999999"
                    android:textCursorDrawable="@drawable/ic_et_show"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,LabelFor,RtlHardcoded,TextFields"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="备    注："
                    android:textColor="@color/cl_666"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText"/>

                <EditText
                    android:id="@+id/et_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/report_ll_bg"
                    android:cursorVisible="true"
                    android:gravity="left|top"
                    android:hint="选填，最多45字"
                    android:includeFontPadding="false"
                    android:maxLength="45"
                    android:maxLines="3"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/cl_444444"
                    android:textColorHint="@color/cl_999999"
                    android:textCursorDrawable="@drawable/ic_et_show"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,LabelFor,RtlHardcoded,TextFields"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/commit_bg"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/cl_white"
            android:textSize="16sp"
            tools:ignore="HardcodedText"/>
    </LinearLayout>
</ScrollView>