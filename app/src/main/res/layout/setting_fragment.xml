<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_clear"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/cl_white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <!--android:drawableRight="@drawable/ic_arrow_right"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/cl_white"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="清除缓存"
                android:textColor="@color/cl_222222"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_clear_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/cl_white"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/cl_666"
                android:textSize="16sp"/>
            <!--android:textStyle="bold"/>-->
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cl_eee"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/cl_white"
            android:paddingLeft="15dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/cl_white"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="WIFI下浏览"
                android:textColor="@color/cl_222222"
                android:textSize="17sp"/>

            <com.my.mymh.wedjet.SwitchButton
                android:id="@+id/switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:checked="true"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:kswBackColor="@color/ksw_md_back_color"
                app:kswBackMeasureRatio="1.8"
                app:kswThumbDrawable="@drawable/ksw_md_thumb"
                app:kswThumbHeight="@dimen/ksw_md_thumb_ripple_size"
                app:kswThumbMarginBottom="-19dp"
                app:kswThumbMarginLeft="-16dp"
                app:kswThumbMarginRight="-16dp"
                app:kswThumbMarginTop="-19dp"
                app:kswThumbWidth="@dimen/ksw_md_thumb_ripple_size"
                tools:ignore="RelativeOverlap"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cl_eee"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/cl_white"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="检测新版本"
            android:textColor="@color/cl_222222"
            android:textSize="17sp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cl_eee"/>

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/cl_white"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="关于"
            android:textColor="@color/cl_222222"
            android:textSize="17sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cl_eee"/>

        <TextView
            android:id="@+id/tv_test"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:visibility="gone"
            android:background="@color/cl_white"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="测试"
            android:textColor="@color/cl_222222"
            android:textSize="17sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/cl_main_red"
        android:gravity="center"
        android:maxLines="1"
        android:text="登录"
        android:textColor="@color/cl_white"
        android:textSize="17sp"/>
</FrameLayout>